{
    "extends": ["airbnb", "plugin:flowtype/recommended"],
    "plugins": [
        "compat",
        "flowtype"
    ],
    "rules": {
        "semi": [2, "never"],
        "no-unexpected-multiline": 2,
        "indent": ["error", 4],
        "compat/compat": 2
    },
    "env": {
        "browser": true,
        "jest": true
    },
    "settings": {
        "polyfills": ["fetch"]
    }
}